    <div class="containter-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left_side row -->
                    <div class="col-md-6 col-12 main_header_left align-items:center">
                            <p><span class="text-color">Welcome to  World-Weather app</span> </p>
